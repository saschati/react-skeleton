{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/Domain/*": ["./src/components/Domain/*"],
      "@/UI/*": ["./src/components/UI/*"],
      "@/Common/*": ["./src/components/Common/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["vite.config.ts"]
}
